<div class="panel panel-default"> 
	<div class="panel-heading"><h1>Listing Pins</h1></div>
	<div class="panel-body">
		<table class="table">
		  <thead>
			<tr>
			  <th>Image</th>
			  <th>Description</th>
			  <th colspan="3"></th>
			</tr>
		  </thead>

		  <tbody>
			<% @pins.each do |pin| %>
			  <tr>
			    <td><%= image_tag pin.image.url(:medium) %></td>
				<td><%= pin.description %></td>
				<td><%= link_to 'Show', pin, class: 'btn btn-primary' %>
				<% if pin.user == current_user %>
				  <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-success' %>
				  <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
				<% end %>
				</td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>
	<br>

	<div class="panel-footer"><%= link_to 'New Pin', new_pin_path, class: 'btn btn-info' %></div>
</div>