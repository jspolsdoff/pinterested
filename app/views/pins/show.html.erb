<div class="panel panel-default">
	<div class="panel-body">
		 <center><%= image_tag @pin.image.url(:medium) %></center>
	</div>
	<div class="panel-footer">	
		<%= @pin.description %><br>
		<br/><strong><%= @pin.user.name %></strong><br/>
		<% if @pin.user == current_user %>
		  <%= link_to 'Edit', edit_pin_path(@pin), class: 'btn btn-success' %>
		<% end %>
		<%= link_to 'Back', pins_path, class: 'btn btn-info' %>
	</div>	
</div>